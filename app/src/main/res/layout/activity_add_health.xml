<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:fillViewport="false"
    tools:context="com.primenumberfarms.farmtrak.AddHealth">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:stretchColumns="*"
        >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#666633"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="20dp"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tag"
            android:textSize="20dp"

            android:layout_column="1"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#525229"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccine / Treatment 1"
            android:id="@+id/textView"
            android:textSize="20dp"

            android:layout_column="0"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/med1"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_weight="1" />
    </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#666633"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccine / Treatment 2"
                android:textSize="20dp"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/med2"
                android:textSize="20dp"

                android:layout_column="1"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#525229"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccine / Treatment 3"
                android:id="@+id/textView"
                android:textSize="20dp"

                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/med3"
                android:textSize="20dp"
                android:layout_column="1"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#666633"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes:"
                android:textSize="20dp"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Notes"
                android:textSize="20dp"

                android:layout_column="1"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#525229"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnAddHealth"
                android:layout_gravity="left"
                android:stretchColumns="0,1"
                android:text="@string/newHealth"
                android:textColor="#525229"
                />
        </TableRow>
    </TableLayout>
</ScrollView>
